<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MADPT" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/backgroungblack</item>
        <item name="android:navigationBarColor">@color/backgroungblack</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>


    </style>

    <!--For Splash Screen-->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/backgroungblack</item>
        <item name="android:navigationBarColor">@color/backgroungblack</item>
        <item name="android:drawable">@mipmap/ic_launcher_icon</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="numberPickerCustom">
        <item name="android:textSize">25dp</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
    </style>
    <style name="dialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@color/backgroungblack</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">@color/backgroungblack</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/backgroungblack</item>
    </style>
</resources>